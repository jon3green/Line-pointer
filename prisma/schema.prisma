// ============== BANKROLL MANAGEMENT ==============

model BankrollTransaction {
  id              String   @id @default(cuid())
  userId          String

  // Transaction details
  type            String   // 'bet', 'deposit', 'withdrawal', 'win', 'loss', 'adjustment'
  amount          Float    // Positive for deposits/wins, negative for bets/losses
  balance         Float    // Balance after transaction

  // Related bet (if applicable)
  betId           String?
  gameId          String?

  // Description
  description     String
  category        String?  // 'sports', 'props', 'parlay', 'live'

  // Metadata
  metadata        String?  // JSON for additional details

  // Timestamps
  createdAt       DateTime @default(now())

  @@index([userId, createdAt])
  @@index([userId, type])
  @@index([betId])
}

model BankrollSnapshot {
  id              String   @id @default(cuid())
  userId          String

  // Snapshot data
  balance         Float
  totalDeposits   Float
  totalWithdrawals Float
  totalWagered    Float
  totalWon        Float
  totalLost       Float
  netProfit       Float    // totalWon - totalLost

  // Performance metrics
  roi             Float    // Return on investment %
  winRate         Float    // Win percentage
  avgBetSize      Float
  biggestWin      Float?
  biggestLoss     Float?

  // Streaks
  currentStreak   Int      // Positive = win streak, negative = loss streak
  longestWinStreak Int
  longestLossStreak Int

  // Period
  period          String   // 'daily', 'weekly', 'monthly', 'yearly', 'all_time'
  startDate       DateTime
  endDate         DateTime

  // Timestamps
  createdAt       DateTime @default(now())

  @@index([userId, period, createdAt])
  @@unique([userId, period, startDate, endDate])
}

// ============== ENHANCED USER SETTINGS ==============

model UserSettings {
  id              String   @id @default(cuid())
  userId          String   @unique

  // Notification Preferences
  emailNotifications      Boolean @default(true)
  pushNotifications       Boolean @default(true)
  smsNotifications        Boolean @default(false)

  // Alert Preferences
  highConfidenceAlerts    Boolean @default(true)  // >80% confidence
  lineMovementAlerts      Boolean @default(true)  // Steam moves, RLM
  injuryAlerts            Boolean @default(true)  // Key player injuries
  weatherAlerts           Boolean @default(false) // Weather impacts
  gameStartAlerts         Boolean @default(true)  // 1 hour before game
  resultAlerts            Boolean @default(true)  // Game results

  // Alert Thresholds
  minConfidenceThreshold  Float   @default(70)    // Min confidence for alerts
  minLineMovement         Float   @default(2.0)   // Min spread movement for alerts

  // Bet Tracking Preferences
  trackBetsEnabled        Boolean @default(true)
  defaultStake            Float?                  // Default bet amount
  defaultUnit             Float   @default(100)   // Unit size for bankroll
  riskLevel               String  @default("medium") // 'conservative', 'medium', 'aggressive'

  // Display Preferences
  oddsFormat              String  @default("american") // 'american', 'decimal', 'fractional'
  timezone                String  @default("America/New_York")
  favoriteTeams           String? // JSON array of team IDs
  hideSpoilers            Boolean @default(false) // Hide scores until viewed

  // Social Preferences
  profilePublic           Boolean @default(true)
  showStats               Boolean @default(true)  // Show betting stats publicly
  allowFollowers          Boolean @default(true)
  showBankroll            Boolean @default(false) // Show bankroll publicly

  // Privacy
  sharePicksPublicly      Boolean @default(false)
  allowDirectMessages     Boolean @default(true)

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// ============== LEADERBOARDS & RANKINGS ==============

model UserStats {
  id              String   @id @default(cuid())
  userId          String   @unique

  // Overall Performance
  totalBets       Int      @default(0)
  wonBets         Int      @default(0)
  lostBets        Int      @default(0)
  pushedBets      Int      @default(0)
  winRate         Float    @default(0)

  // Financial
  totalWagered    Float    @default(0)
  totalProfit     Float    @default(0)
  roi             Float    @default(0)
  biggestWin      Float?
  biggestLoss     Float?

  // Streaks
  currentStreak   Int      @default(0) // Positive = wins, negative = losses
  bestStreak      Int      @default(0)
  worstStreak     Int      @default(0)

  // By Sport
  nflStats        String?  // JSON: {bets, wins, roi, ...}
  ncaafStats      String?  // JSON
  nbaStats        String?  // JSON
  mlbStats        String?  // JSON

  // By Bet Type
  spreadStats     String?  // JSON: {bets, wins, roi, ...}
  moneylineStats  String?  // JSON
  totalStats      String?  // JSON
  propStats       String?  // JSON
  parlayStats     String?  // JSON

  // Rankings
  overallRank     Int?
  sportRanks      String?  // JSON: {nfl: rank, ncaaf: rank, ...}

  // Timestamps
  lastBetAt       DateTime?
  lastUpdated     DateTime @updatedAt
  createdAt       DateTime @default(now())

  @@index([winRate])
  @@index([roi])
  @@index([totalProfit])
  @@index([overallRank])
}

model Leaderboard {
  id              String   @id @default(cuid())

  // Period
  period          String   // 'daily', 'weekly', 'monthly', 'season', 'all_time'
  sport           String?  // null for all sports
  betType         String?  // null for all bet types
  startDate       DateTime
  endDate         DateTime

  // Rankings (stored as JSON array)
  rankings        String   // JSON: [{userId, username, wins, roi, profit, rank}, ...]

  // Metadata
  totalUsers      Int
  calculatedAt    DateTime @default(now())

  @@unique([period, sport, betType, startDate, endDate])
  @@index([period, sport])
}

// ============== PLAYER PROPS PREDICTIONS ==============

model PropPrediction {
  id              String   @id @default(cuid())

  // Player & Game
  playerId        String
  playerName      String
  team            String
  position        String
  gameId          String
  opponent        String
  gameTime        DateTime
  sport           String?

  // Prop Details
  propType        String   // 'passing_yards', 'rushing_yards', 'receiving_yards', 'touchdowns', etc.
  line            Float
  prediction      String   // 'over' or 'under'
  projectedValue  Float    // Our projected stat line
  confidence      Float    // 0-100

  // Market Details
  overOdds        Float?
  underOdds       Float?
  expectedValue   Float?   // EV calculation

  // Factors (JSON)
  factors         String?  // JSON with all decision factors

  // Model
  modelVersion    String   @default("v1.0")

  // Actual Results
  actualValue     Float?   // Actual stat achieved
  wasCorrect      Boolean? // Did prediction hit?

  // Tracking
  alertSent       Boolean  @default(false)

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  resultsFetchedAt DateTime?

  @@unique([playerId, gameId, propType])
  @@index([playerId, gameTime])
  @@index([gameId])
  @@index([propType])
  @@index([confidence])
  @@index([wasCorrect])
  @@index([gameTime])
}

// ============== LIVE BETTING DATA ==============

model LiveGameData {
  id              String   @id @default(cuid())
  gameId          String
  externalGameId  String?

  // Game Info
  sport           String
  homeTeam        String
  awayTeam        String

  // Live Score
  homeScore       Int
  awayScore       Int

  // Game State
  quarter         Int      // Current quarter/period
  timeRemaining   String   // "5:23" in quarter
  possession      String?  // Team with possession
  down            Int?     // Current down (NFL)
  yardsToGo       Int?     // Yards to first down
  yardLine        Int?     // Field position

  // Live Odds
  liveSpreadHome  Float?
  liveSpreadAway  Float?
  liveMoneylineHome Int?
  liveMoneylineAway Int?
  liveTotalLine   Float?

  // Win Probability (from our model)
  homeWinProb     Float?   // 0-100
  awayWinProb     Float?   // 0-100

  // Momentum Indicators
  momentumScore   Float?   // -100 to 100 (negative = away, positive = home)
  recentDrives    String?  // JSON array of recent drive outcomes

  // Betting Recommendations
  recommendations String?  // JSON array of live betting opportunities

  // Timestamps
  timestamp       DateTime @default(now())
  lastUpdated     DateTime @updatedAt

  @@index([gameId, timestamp])
  @@index([externalGameId, timestamp])
  @@index([sport, timestamp])
}

