// ============== NOTIFICATIONS & ALERTS ENHANCEMENT ==============

model NotificationQueue {
  id              String   @id @default(cuid())
  userId          String

  // Notification Details
  type            String   // 'push', 'email', 'sms', 'in_app'
  channel         String   // Specific channel (e.g., 'high_confidence_pick', 'steam_move')
  priority        String   @default("normal") // 'low', 'normal', 'high', 'urgent'

  // Content
  title           String
  message         String
  data            String?  // JSON with additional data
  actionUrl       String?  // Deep link or URL

  // Status
  status          String   @default("pending") // 'pending', 'sent', 'failed', 'canceled'
  sentAt          DateTime?
  failedAt        DateTime?
  errorMessage    String?

  // Deduplication
  dedupeKey       String?  // Unique key to prevent duplicates

  // Scheduling
  scheduledFor    DateTime? // Send at specific time
  expiresAt       DateTime? // Don't send after this time

  // Timestamps
  createdAt       DateTime @default(now())

  @@index([userId, status])
  @@index([scheduledFor])
  @@index([dedupeKey])
}

// ============== INJURY & WEATHER TRACKING ==============

model InjuryReport {
  id              String   @id @default(cuid())

  // Player info
  playerId        String
  playerName      String
  team            String
  position        String

  // Injury details
  status          String   // 'Out', 'Questionable', 'Doubtful', 'IR', 'PUP'
  description     String?  // "Knee injury"

  // Impact
  impactScore     Float    // 0-100, how much this affects team

  // Source & timing
  source          String   @default("ESPN")
  reportedAt      DateTime @default(now())

  // Alert tracking
  alertSent       Boolean  @default(false)

  @@index([team, reportedAt])
  @@index([playerId, reportedAt])
  @@index([impactScore])
}

model WeatherReport {
  id              String   @id @default(cuid())
  gameId          String

  // Location
  venue           String
  city            String
  state           String

  // Weather conditions
  temperature     Float?   // Fahrenheit
  feelsLike       Float?
  windSpeed       Float?   // mph
  windDirection   String?
  precipitation   Float?   // % chance
  humidity        Float?   // %
  conditions      String?  // "Cloudy", "Rain", "Snow", etc.

  // Impact assessment
  impactScore     Float    // 0-100, how much weather affects game

  // Source & timing
  source          String   @default("OpenWeatherMap")
  reportedAt      DateTime @default(now())
  forecastFor     DateTime // When this forecast is for

  @@index([gameId, forecastFor])
}
